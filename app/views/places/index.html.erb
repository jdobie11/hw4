<div class="container py-4">
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="display-5 fw-bold mb-4"> <%= session["username"] %>'s Places</h1>

       <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a href="/places/new" class="btn btn-primary">
          <i class="fas fa-plus-circle me-2"></i>New Place
        </a>
      </div>


      <% if @places.empty? %>
        <div class="text-center p-5 bg-light rounded-3">
          <p class="text-muted">No places added yet</p>
          <a href="/places/new" class="btn btn-primary">Add your first place</a>
        </div>
      <% else %>
        <div class="list-group shadow-sm mb-4">
          <% for place in @places %>
            <a href="/places/<%= place["id"] %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
              <span><i class="fas fa-map-marker-alt me-2 text-primary"></i><%= place["name"] %></span>
              <i class="fas fa-chevron-right text-muted"></i>
            </a>
          <% end %>
        </div>
      <% end %>
      
     
    </div>
  </div>
</div>
