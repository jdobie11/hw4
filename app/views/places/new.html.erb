<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h1 class="h3 mb-0">New Place</h1>
        </div>
        <div class="card-body">
          <form action="/places" method="post">
            <div class="form-group mb-3">
              <label for="name_input" class="form-label">Name</label>
              <input type="text" name="name" id="name_input" class="form-control" required>
            </div>
            
            <div class="d-grid">
              <button type="submit" class="btn btn-primary">Save Place</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
