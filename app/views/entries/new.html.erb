<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white py-3">
          <h1 class="h3 mb-0">New Entry</h1>
        </div>
        <div class="card-body p-4">
          <form action="/entries" method="post" class="needs-validation" novalidate>
            <input type="hidden" name="place_id" value="<%= params["place_id"] %>">
            
            <div class="mb-3">
              <label for="title_input" class="form-label">Title</label>
              <input type="text" name="title" id="title_input" class="form-control" required>
              <div class="invalid-feedback">Please provide a title for your entry.</div>
            </div>
            
            <div class="mb-3">
              <label for="description_input" class="form-label">Description</label>
              <textarea name="description" id="description_input" class="form-control" rows="4" required></textarea>
              <div class="invalid-feedback">Please provide a description.</div>
            </div>
            
            <div class="mb-4">
              <label for="occurred_on_input" class="form-label">Occurred On</label>
              <div class="input-group">
                <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                <input type="date" name="occurred_on" id="occurred_on_input" class="form-control" required>
                <div class="invalid-feedback">Please select a date.</div>
              </div>

              <div class="mb-4">
                <label for="uploaded_image_input" class="form-label">Upload Image</label>
                <input type="file" name="uploaded_image" id="uploaded_image_input" class="form-control">
              </div>
            </div>
            
            <div class="d-flex justify-content-between">
              <a href="/places/<%= params["place_id"] %>" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Cancel
              </a>
              <button type="submit" class="btn btn-primary px-4">
                <i class="fas fa-save me-2"></i>Save Entry
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Form validation script
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>
